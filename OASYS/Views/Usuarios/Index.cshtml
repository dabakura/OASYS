@model IEnumerable<OASYS.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<div class="row mb-3 align-content-center">
    <table>
        <tr>
            <th>
                <div class="col-12">
                    <a class="nav-link" href="@Url.Action("Create", "Usuarios")">
                        <img src="~/Assets/Icons/icons8-add-48.png" /> Crear Usurario
                    </a>
                </div>
            </th>
            <th>
                <div class="col-12">
                    <a class="nav-link" href="@Url.Action("IndexPersonas", "Usuarios")">
                        <img src="~/Assets/Icons/icons8-user-48.png" /> Personas
                    </a>
                </div>
            </th>
            <th></th>
        </tr>
    </table>
</div>

<hr class="my-3" />
<div class="row mb-3">
    
</div>
<div class="table-responsive table-striped">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nombre Usuario
                </th>
                <th>
                    Estado Actual
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                string Activo;
                if (item.Indicador_Activo == true)
                {
                    Activo = "Activo";
                }
                else
                {
                    Activo = "Inactivo";
                }
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.usuario1)
                    </td>
                    <td>
                        @Activo
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn" type="submit">
                                <img style="width:20px; height:20px;" src="~/Assets/Icons/icons8-edit-file-48.png"> @Html.ActionLink("Editar", "Edit", new { id = item.IDusuario })
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </thead>
    </table>
</div>

@model OASYS.Models.GestiondeCursos

@{
    ViewBag.Title = "Gestionar Cursos";
    ViewBag.Title = "Editar Aula";
    Interfaz a = new Interfaz();
    string laya = a.ROL((int)Session["Rol"]);
    Layout = laya;
}

<h2>Gestionar Cursos</h2>
<div class="row justify-content-center">
    <div class="col">
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">ID </label>
                        <div class="col-md-10">
                            @Html.DropDownList("IDcurso", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDcurso, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aula</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IDaula", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDaula, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Horario</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IDhorario", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDhorario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Profesor</label>
                        <div class="col-md-10">
                            @Html.DropDownList("IDprofesor", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDprofesor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    <div class="btn-group">
        <a class="nav-link" style="font-size: x-small; font: bold;" href="@Url.Action("Index", "GestiondeCursos")">
            <img style="width:25px; height:25px;" src="~/Assets/Icons/icons8-return-48.png">
        </a>
    </div>
</div>

@model OASYS.Models.Noticias

@{
    ViewBag.Title = "Crear Noticia";
    Interfaz f = new Interfaz();
    string laya = f.ROL((int)Session["Rol"]);
    Layout = laya;
}

<h2>Crear Noticia</h2>
<div class="row justify-content-center">
    <div class="col">
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Noticia</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.texto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.texto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    <div class="btn-group">
        <a class="nav-link" style="font-size: x-small; font: bold;" href="@Url.Action("Index", "Noticias")">
            <img style="width:25px; height:25px;" src="~/Assets/Icons/icons8-return-48.png">
        </a>
    </div>
</div>

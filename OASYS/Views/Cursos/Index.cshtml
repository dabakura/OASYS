@model IEnumerable<OASYS.Models.Curso>

@{
    ViewBag.Title = "Editar Aula";
    Interfaz a = new Interfaz();
    string laya = a.ROL((int)Session["Rol"]);
    Layout = laya;
}

<div class="row mb-3">
    <div class="col-12">
        <a class="nav-link" href="@Url.Action("Create", "Cursos")">
            <img src="~/Assets/Icons/icons8-add-48.png" /> Crear Curso
        </a>
    </div>
</div>
<div class="table-responsive table-striped">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Nivel
                </th>
                <th>
                    Estado Actual
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                string Activo;
                if (item.Indicador_Activo == true)
                {
                    Activo = "Activo";
                }
                else
                {
                    Activo = "Inactivo";
                }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel.nivel1)
                </td>
                <td>
                    @Activo
                </td>


                <td>
                    <div class="btn-group">
                        <button class="btn" type="submit">
                            <img style="width:20px; height:20px;" src="~/Assets/Icons/icons8-edit-file-48.png"> @Html.ActionLink("Editar", "Edit", new { id = item.IDcurso })
                        </button>
                    </div>
                </td>
            </tr>
            }
        </thead>
    </table>
</div>